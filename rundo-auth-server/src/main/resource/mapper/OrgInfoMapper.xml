<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runjian.auth.server.mapper.OrgInfoMapper">

    <select id="selectOrgTree" resultType="com.runjian.auth.server.domain.entity.OrgInfo">
        SELECT *
        FROM org_info org
        <trim prefix="WHERE" prefixOverrides="AND|OR" suffixOverrides="AND|OR">
            AND (org_pids like CONCAT('%[', #{orgId,jdbcType=BIGINT}, ']%') OR id = #{orgId,jdbcType=BIGINT})
            <if test="orgName !=null and orgName != '' " >
                AND org_name like CONCAT('%', #{orgName,jdbcType=VARCHAR},'%')
            </if>
        </trim>
    </select>

</mapper>
