<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.runjian.auth.server.mapper.MenuInfoMapper">

    <select id="getMenuInfoByAppId" resultType="com.runjian.auth.server.domain.entity.MenuInfo">
        SELECT
            smi.*
        FROM
            menu_info smi
        WHERE smi.app_id = #{appId,jdbcType=BIGINT}
          AND smi.delete_flag = 0
          AND smi.hidden = 0
          AND smi.status = 0
    </select>
</mapper>
